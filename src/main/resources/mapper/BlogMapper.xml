<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace：命名空间，一定要填 -->
<mapper namespace="org.apache.example.BlogMapper">
  <select id="selectBlog" resultType="org.apache.example.Blog">
    select * from blog where id = #{id}
  </select>
</mapper>
